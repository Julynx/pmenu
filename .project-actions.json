{
    "actions": [
        {
            "text": "$(sparkle) Lint",
            "command": "uv run --dev -m pylint pmenu.py; yina lint pmenu.py"
        },
        {
            "text": "$(sparkle) Format",
            "command": "uv run --dev -m black pmenu.py"
        },
        {
            "text": "$(arrow-up) Push",
            "command": "git add . && git commit && git push"
        },
        {
            "text": "$(gear) Bump",
            "command": "uv version --bump patch"
        },
        {
            "text": "$(rocket) Publish",
            "command": "uv build; uv publish"
        }
    ]
}